<%= provide(:title, @event.subject) %>
<h1><%= @event.name %></h1>
<h3>
Owned by:
<%= link_to @user.name, @user %>
</h3>
<% if !current_user?(@user) %>
    <% if !signed_in?(current_user, @event) %>
        <%= form_for(@event_sign) do |f| %>
          <%= f.hidden_field :event_id, as: :hidden, value: @event.id %>
          <%= f.submit "Attend event", class: "btn btn-success input-btn" %>
        <% end %>
    <% else %>
        <%= link_to "No longer interested", event_user_path, method: :delete, class: "btn btn-danger" %>
    <% end %>
<% end %>
<p>Subject - <%= @event.subject %></p>
<p>Place - <%= @event.place %></p>
<p>Cost - <%= @event.cost %> â‚¬ /hour</p>
<p>Date - <%= @event.date.strftime("%d.%m.%Y") %> </p>
<p> Start at - <%= @event.date.strftime("%H:%M") %></p>
<p>Description - <%= @event.description %></p>
<% if current_user?(@user) %>
    <div class="text-right">
      <i class="glyphicon glyphicon-trash"></i>
      <%= link_to "Delete event", @event, method: :delete,
                  data: { confirm: "Are you sure you want to delete this event?" } %>
    </div>
<% end %>

<% if !@card.nil? %>
  <p>Visited <%= pluralize(@card, "time") %>.</p>
<% end %>