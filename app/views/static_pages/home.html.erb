<% if logged_in? %>
    <div class="container">
      <div class="row">
        <div class="col-md-9">
          <%= form_tag("/", method: "get") do %>
              <%= label_tag(:subject_search, "Search for:") %>
              <%= select_tag(:subject_search, options_from_collection_for_select(Subject.all, :id, :name),{include_blank: "All", class: "subject_search" }) %>
              <%= submit_tag("Search", :class => "btn btn-primary input-btn btn-info") %>
          <% end %>
          </div>
          <div class="col-md-3 text-right">
            <%= link_to "Create event", creation_path, class: "btn btn-primary text-right" %>
          </div>
      </div>
    </div>
    <% if @events.any? %>
        <%= will_paginate @events %>
        <div class="container">
          <div class="row">
            <ul class="events">
              <% @events.map { |event| %>
                  <li>
                    <div class="col-md-10">
                      <%= link_to event['name'], "events/#{event['id']}" %>
                    </div>
                    <div class="col-md-2 text-right">
                      Owner rating: <%= event['score'] %>/10
                    </div>
                  </li>
              <%} %>
            </ul>
          </div>
        </div>
        <%= will_paginate @events %>
    <% else %>
        <h2>There are no events created yet</h2>
    <% end %>
<% else %>
  <div class="center jumbotron">
    <h1>FIIT-Tutor</h1>
    <h2>
      This is the home page for the <span class="fiit-tutor-imp">Fiit-Tutor</span> application.
    </h2>
    <p>In order to use this page you need to register.</p>
    <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>
  </div>
  <%= link_to "Alredy have an account?", login_path, class: "btn btn-lg btn-link" %>
<% end %>

