<%= provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
</div>
<% if !current_user.admin? && current_user?(@user) %>
    <div class="text-right">
      <i class="glyphicon glyphicon-trash"></i>
      <%= link_to "Delete account", @user, method: :delete,
                      data: { confirm: "Are you sure you want to delete your account?" } %>
    </div>
<% end %>
<button class="js_button clicked" data="js_button-rate">Rating:</button>
<button class="js_button" data="js_button-owned">Owned events:</button>
<% if current_user?(@user) %>
  <button class="js_button" data="js_button-attend">Attending events:</button>
<% end %>
<div class="container">
  <div class="row">
    <div class="col-md-6 hidden" data="div-owned">
      <% if !@events.any? %>
          <p>No events yet.</p>
      <% else %>
          <ul class="events">
            <%= render @events %>
          </ul>
      <% end %>
    </div>
    <% if current_user?(@user) %>
      <div class="col-md-6 hidden" data="div-attend">
        <% if !@signed_events.any? %>
          <p>No upcoming events for attendance.</p>
        <% else %>
            <ul class="events">
              <%= render @signed_events %>
            </ul>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
<div class="show", data="div-rate">
  <div class="container">
    <% if @average[0].average > 0 %>
      <p>Average rating: <%= @average[0].average %>/10</p>
    <% else %>
      <p>No rating yet!</p>
    <% end %>
    <ul class="ratings">
      <div class="row">
        <%= render @rating %>
        <%= will_paginate @rating, param_name: :rate %>
      </div>
    </ul>
  </div>
  <% if attended_event?(@user) %>
      <%= form_for(@new_rating) do |f| %>

          <%= f.hidden_field :tutor_id, as: :hidden, value: @user.id %>

          <%= f.label "#{:score} out of 10"%>
          <%= f.text_field :score, value: 10 %>

          <%= f.label :content %>
          <%= f.text_area :content %>

          <%= f.submit "Rate", class: "btn btn-success input-btn" %>

      <% end %>
  <% end %>
</div>
